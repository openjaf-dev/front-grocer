<div class="col-md-6 col-md-offset-1">
	<!-- REGISTRATION FORM WITH ICONS -->
	<div class="widget">
		<div class="widget-content">
		  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
		      :html => { :role => 'form', :class => 'form-horizontal'}) do |f| %>
		    <h3>Sign up</h3>
		    <%= devise_error_messages! %>
			
		    <div class="form-group">
		      <%= f.label :name, :html => { for: 'username', :class => 'control-label sr-only'} %>
			  <div class="col-sm-12">
				  <div class="input-group">
				      <%= f.text_field :name, :autofocus => true, :html => { class: 'form-control',  
					      id: 'username',  placeholder: "Username" } %>
					  <span class="input-group-addon"><i class="fa fa-user"></i></span>
				  </div>
		      </div>
		    </div>
			
		    <div class="form-group">
		      <%= f.label :email, :html => { for: 'email', :class => 'control-label sr-only'} %>
			  <div class="col-sm-12">
				  <div class="input-group">
				      <%= f.text_field :email, :autofocus => true, :html => { class: 'form-control', 
					                   id: 'email',  placeholder: "Email" } %>
					  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
				  </div>
		      </div>
		    </div>
			
		    <div class="form-group">
		      <%= f.label :password, :html => { for: 'password', :class => 'control-label sr-only'} %>
			  <div class="col-sm-12">
				  <div class="input-group">
				      <%= f.text_field :password, :autofocus => true, :html => { class: 'form-control', 
					                   id: 'password',  placeholder: "Password" } %>
					  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
				  </div>
		      </div>
		    </div>

		    <div class="form-group">
		      <%= f.label :password_confirmation, :html => { for: 'password2', :class => 'control-label sr-only'} %>
			  <div class="col-sm-12">
				  <div class="input-group">
				      <%= f.text_field :password_confirmation, :autofocus => true, :html => { class: 'form-control', 
					                   id: 'password2',  placeholder: "Password confirmation" } %>
					  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
				  </div>
		      </div>
		    </div>
			
			<div class="form-group">
				<div class="col-sm-12 simple-checkbox">
					<input type="checkbox" id="checkbox-accept2" name="checkbox-accept">
					<label for="checkbox-accept2">I accept the <a href="#">Terms &amp; Agreement</a></label>
				</div>
			</div>
	
		     <%= f.submit 'Create Account', :class => 'button right' %>
		  <% end %>
		  
		</div>
	</div>
</div>
