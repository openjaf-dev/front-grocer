<%# add navigation links to this file %>
<li role="presentation" class="dropdown-header">Date Range</li>
<% controller = params[:controller] %>
<% action = params[:action] %>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :today}) do %>
      <span class="text">Today</span>
  <% end %>
</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :yesterday}) do %>
      <span class="text">Yesterday</span>
  <% end %>
</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :last_week}) do %>
      <span class="text">Last Week</span>
  <% end %>
</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :last_month}) do %>
      <span class="text">Last Month</span>
  <% end %>
</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :year_to_date}) do %>
      <span class="text">Year to Date</span>
  <% end %>
</li>
<li data-toggle="modal" data-target="#custom_range_data"><a href="#myModal" data-toggle="modal"><span class="text">Custom Range</span></a></li>

<li role="presentation" class="divider"></li>
<li role="presentation" class="dropdown-header">Compare To</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :previous_period}) do %>
      <span class="text">Previous Period</span>
  <% end %>
</li>
<li>
  <%=link_to({:controller => controller,:action => action,:date_range => :previous_year}) do %>
      <span class="text">Previous Year</span>
  <% end %>
</li>
<li data-toggle="modal" data-target="#custom_range_compare"><a href="#myModal" data-toggle="modal"><span class="text">Custom Range</span></a></li>



